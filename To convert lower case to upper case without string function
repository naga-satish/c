int upper(char x[]);
int main()
{
  char a[100];
  printf("Enter random string:");
  gets(a);
  upper(a);
  getch();
}
int upper(char y[])
{
    int j=0;
    while(y[j]!='\0')
    {
        if(y[j]>=96&&y[j]<122)
  {
      y[j]=y[j]-32;
  }
  j++;
    }
      printf("\nUpper case to Lower case converted string is ");
  printf("%s",y);
 return 0;
}
